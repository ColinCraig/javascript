function bouncer(arr) {
  return arr.filter(removeFalsy);
}
function removeFalsy(value)
  {
    // Falsy values in javascript are: false, 0, -0, "", '', null, undefined and NaN 
    // everything else is Truthy, e.g. "false" and "0" are Truthy
    
        if(value) // if  block will only be executed for truthy values
          {
            return true;
          }
         else
          {
            return false; // falsy values will drop through if statement and come here instead
          } 
  }

bouncer([7, "ate", "", false, 9, -0, 0, '', null, undefined, NaN]); // returns [7, "ate", 9] 
